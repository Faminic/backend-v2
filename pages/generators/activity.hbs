{{#> layout}}
<div class="jumbotron jumbotron-fluid" style="background-size: cover; background-position: center; padding: 10em; background-image: url({{banner}})"></div>
<div class="container">
  <div class="row">
    <div class="col-md">
      <h1>{{name}}</h1>
      <div id="facility-carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          {{#each images}}
            {{#if @index}}
            <div class="carousel-item"><img class="d-block w-100" src="{{this.image}}"></div>
            {{else}}
            <div class="carousel-item active"><img class="d-block w-100" src="{{this.image}}"></div>
            {{/if}}
          {{/each}}
        </div>
        <a class="carousel-control-prev" href="#facility-carousel" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#facility-carousel" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    <div class="col-md">
      <p>{{{ description }}}</p>
      <a href="/book-now" class="btn btn-primary btn-lg active" role="button">book now</a>
    </div>
  </div>
</div>
{{/layout}}
