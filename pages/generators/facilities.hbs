{{#> layout}}


<div class="jumbotron jumbotron-fluid" style="background-size: cover; background-position: center; padding: 10em; background-image: url({{Banner}})"></div>
<div class="container">
	<div class="row">
		<div class="col-md">
			<h1>{{ Name }}</h1>
			<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
				<ol class="carousel-indicators">
				{{#each Facility_Images}}
					<li data-target="#carouselExampleControls" data-slide-to="{{@index}}" {{#unless @index}}class="active"{{/unless}}></li>
				{{/each}}
				</ol>
				<div class="carousel-inner">
					{{#each Facility_Images}}
					<div class="carousel-item {{#unless @index}}active{{/unless}}">
						<img class="d-block w-100" src="{{ this.Image }}"/>
					</div>
					{{/each}}
				</div>
				<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a>
				<a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
				</a>
			</div>
		</div>
		<div class="col-md pt-4 mt-4">
			<p>{{{Description}}}</p>
			{{#if Available_Times.Monday }}
				<h5>Availability</h5>
				{{#each Available_Times}}
				{{#if this}}  
				<p>{{@key}} : {{this}}</p>
				{{/if}}
				{{/each}}
			{{/if}}
		</div>
	</div>
</div>
{{/layout}}
