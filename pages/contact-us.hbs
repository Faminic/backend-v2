{{#> layout}}
<div class="container-fluid" id="mapcontainer" width="100%">
  <iframe width="100%" height="300px" id="gmap_canvas" src="https://maps.google.com/maps?q=Church%20Chare%20Chester-le-Street%20Co.%20Durham%20DH3%203PZ&t=&z=17&ie=UTF8&iwloc=&output=embed"></iframe>
</div>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-5 offset-md-1" id="firstcontainer">
      <h1 class="home-header"><span>{{{title_1}}}</span></h1>
      {{{content_1}}}
    </div>
    <div class="col-md-5" id="secondcontainer">
      <h1 class="home-header"><span>{{{title_2}}}</span></h1>
      <form id="contact-us-form" style="display: block;">
        <div class="form-group">
          <label for="name">Your Name</label>
          <input type="text" id="name" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="email">Your Email</label>
          <input type="text" id="email" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="phone">Your Telephone</label>
          <input type="text" id="phone" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="query">How can we help?</label>
          <textarea type="text" id="query" class="form-control" rows="10" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary" id="sendbutton" style="display: block;">Send</button>
        <div class="btn btn-success" id="submission-alert" style="display: none;">
          <span class="closebtn" id="submission-alert-close" onclick="this.parentElement.style.display='none'">&times;</span>
          Your submission has been received
        </div>
      </form>
    </div>
  </div>
</div>
<link rel="stylesheet" href="/assets/css/contact-us.css">
<script src="/assets/js/contact-us.js"></script>
{{/layout}}
